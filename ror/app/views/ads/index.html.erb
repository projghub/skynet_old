<h1>Listing Ads</h1>

<table class="list">
	<thead>
		<tr>
			<th>Ad Group</th>
			<th>Ad Type</th>
			<th>Title</th>
			<th>Destination URL</th>
			<th>Enabled?</th>
			<th class="action"></th>
		</tr>
	</thead>

	<tbody>
		<% @ads.each do |ad| %>
			<tr>
				<td><%= ad.ad_group.name %></td>
				<td><%= ad.ad_type.label %></td>
				<td><%= ad.title %></td>
				<td><%= ad.destination_url %></td>
				<td><%= ad.enabled ? "Yes" : "No" %></td>
				<td class="actions">
					<%= link_to 'Show', ad %>
					<%= link_to 'Edit', edit_ad_path(ad) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New Ad', new_ad_path %>
