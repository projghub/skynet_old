<% content_for :second_header do %>
	<%= render :partial => "reports/second_header" %>
<% end %>

<%= render :partial => "reports/header", :locals => {:title => "Ads Report", :action => "by_ads"} %>

<table class="reports">
	<thead>
		<tr>
			<th>Ad</th>
			<th>Impressions</th>
			<th>Clicks</th>
		</tr>
	</thead>
	<tbody>
		<% @ads.each do |ad| %>
			<tr<% unless ad.enabled && ad.campaign_enabled == 1 %> class="disabled"<% end %>>
				<td><%= ad.title %> <sup><%= link_to 'Edit', edit_ad_path(ad) %></sup></td>
				<td><%= "%d" % (ad.impressions || 0) %></td>
				<td><%= "%d" % (ad.clicks || 0) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
