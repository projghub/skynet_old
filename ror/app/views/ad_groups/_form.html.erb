<%= form_for(@ad_group) do |f| %>
	<% if @ad_group.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@ad_group.errors.count, "error") %> prohibited this ad_group from being saved:</h2>

			<ul>
				<% @ad_group.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<table class="form">
		<tr class="field">
			<th><%= raw require(f.label :name) %></th>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr class="field">
			<th><%= raw require(f.label :campaign_id) %></th>
			<td><%= f.select :campaign_id, Campaign.where(:account_id => @auth_user.account_id).all.collect{ |c| [c.name, c.id] } %></td>
		</tr>
		<tr class="actions">
			<td colspan="2"><%= f.submit %></td>
		</tr>
	</table>
<% end %>
