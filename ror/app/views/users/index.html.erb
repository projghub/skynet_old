<h1>Listing Users</h1>

<table class="list">
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Enabled?</th>
			<th class="action"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td><%= user.enabled ? "Yes" : "No" %></td>
				<td class="actions">
					<%= link_to 'Show', user %>
					<%= link_to 'Edit', edit_user_path(user) %>
					<%= link_to 'Delete', user, :confirm => "Are you sure you want to delete this record?", :method => :delete %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New User', new_user_path %>
