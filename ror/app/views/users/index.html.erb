<h1>Listing users</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Username</th>
    <th>Password hash</th>
    <th>Salt</th>
    <th>Email</th>
    <th>Enabled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.account_id %></td>
    <td><%= user.username %></td>
    <td><%= user.password_hash %></td>
    <td><%= user.salt %></td>
    <td><%= user.email %></td>
    <td><%= user.enabled %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

