<h1>Listing Accounts</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Enabled?</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @accounts.each do |account| %>
			<tr>
				<td><%= account.name %></td>
				<td><%= account.email %></td>
				<td><%= account.enabled ? "Yes" : "No" %></td>
				<td><%= link_to 'Show', account %></td>
				<td><%= link_to 'Edit', edit_account_path(account) %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Account', new_account_path %>
